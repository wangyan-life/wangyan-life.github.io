---
import Breadcrumb from "@/components/Breadcrumb.astro";
import { SITE } from "@/config";

interface StringTitleProp {
  pageTitle: string;
  pageDesc?: string;
}

interface ArrayTitleProp {
  pageTitle: [string, string];
  titleTransition: string;
  pageDesc?: string;
}

export type Props = StringTitleProp | ArrayTitleProp;

const { props } = Astro;

// For breadcrumb (last breadcrumb item) prefer the semantic title part when
// pageTitle is an array [prefix, mainTitle]. Keep the visible H1 rendering
// unchanged (we still render the prefix + animated mainTitle). This ensures
// breadcrumb shows just "next-js" while the page heading can show "标签: next-js".
// For breadcrumb (last breadcrumb item) prefer the semantic title part when
// pageTitle is an array [prefix, mainTitle]. Keep the visible H1 rendering
// unchanged (we still render the prefix + animated mainTitle). This ensures
// breadcrumb shows just the tag name while the page heading can show "标签: tag".
const currentTitle =
  "titleTransition" in props ? props.pageTitle[1] : (props.pageTitle as string);

// Only pass the breadcrumb override when titleTransition is present (ie. tag pages)
const breadcrumbTitle = "titleTransition" in props ? props.pageTitle[1] : undefined;

const backUrl = SITE.showBackButton ? Astro.url.pathname : "/";
---

<Breadcrumb currentTitle={breadcrumbTitle} />
<main
  data-backUrl={backUrl}
  id="main-content"
  class="mx-auto w-full max-w-app px-4 pb-4"
>
  {
    "titleTransition" in props ? (
      <h1 class="text-2xl font-semibold sm:text-3xl">
        {props.pageTitle[0]}
        <span transition:name={props.titleTransition}>
          {props.pageTitle[1]}
        </span>
      </h1>
    ) : (
      <h1 class="text-2xl font-semibold sm:text-3xl">{props.pageTitle}</h1>
    )
  }
  <p class="mt-2 mb-6 italic">{props.pageDesc}</p>
  <slot />
</main>

<script>
  document.addEventListener("astro:page-load", () => {
    const mainContent: HTMLElement | null =
      document.querySelector("#main-content");
    const backUrl = mainContent?.dataset?.backurl;
    if (backUrl) {
      sessionStorage.setItem("backUrl", backUrl);
    }
  });
</script>
