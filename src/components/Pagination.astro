---
import type { Page } from "astro";
import type { CollectionEntry } from "astro:content";
import IconArrowLeft from "@/assets/icons/IconArrowLeft.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import LinkButton from "./LinkButton.astro";

export interface Props {
  page: Page<CollectionEntry<"blog">>;
}

const { page } = Astro.props;

// Normalize pagination hrefs: avoid linking to `/.../page/1/` which may not exist
const normalizeHref = (href?: string | null) => {
  if (!href) return href;
  try {
    // Ensure trailing slash consistency
    const cleaned = String(href);
    return cleaned.replace(/\/page\/1\/?$/i, "/");
  } catch (e) {
    return href as string;
  }
};

const prevHref = normalizeHref(page.url.prev as string | null);
const nextHref = normalizeHref(page.url.next as string | null);
---

{
  page.lastPage > 1 && (
    <nav class="mt-auto mb-8 flex justify-center" aria-label="Pagination">
      <LinkButton
        disabled={!page.url.prev}
        href={prevHref as string}
        class:list={["me-4 select-none", { "opacity-50": !page.url.prev }]}
        ariaLabel="上一页"
      >
        <IconArrowLeft class="inline-block rtl:rotate-180" />
        上一页
      </LinkButton>
      {page.currentPage} / {page.lastPage}
      <LinkButton
        disabled={!page.url.next}
        href={nextHref as string}
        class:list={["ms-4 select-none", { "opacity-50": !page.url.next }]}
        ariaLabel="下一页"
      >
        下一页
        <IconArrowRight class="inline-block rtl:rotate-180" />
      </LinkButton>
    </nav>
  )
}
