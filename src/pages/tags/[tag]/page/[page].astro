---
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Card from "@/components/Card.astro";
import Pagination from "@/components/Pagination.astro";
import getUniqueTags from "@/utils/getUniqueTags";
import getPostsByTag from "@/utils/getPostsByTag";
import getSortedPosts from "@/utils/getSortedPosts";
import { SITE } from "@/config";

export const getStaticPaths = (async ({ paginate }) => {
  const posts = await getCollection("blog", ({ data }) => !data.draft);
  const tags = getUniqueTags(posts);

  const all = [];

  for (const { tag, tagName } of tags) {
    const tagPosts = getPostsByTag(posts, tag);
    const pages = await paginate(getSortedPosts(tagPosts), {
      pageSize: SITE.postPerPage,
      params: { tag },
      // pass the original tagName (from getUniqueTags) so pages keep original casing
      props: { tagName },
    });

    // pages include page 1; filter out page 1 to avoid duplicating [tag]/index
    all.push(...pages.filter(p => Number(p.params.page) > 1));
  }

  return all;
}) satisfies GetStaticPaths;

const { page } = Astro.props;
const params = Astro.params;
const tag = params.tag;

---

<Layout title={`${Astro.props.tagName ?? decodeURIComponent(tag)} | ${SITE.title}`}>
  <Header />
  <Main
    pageTitle={Astro.props.tagName ?? decodeURIComponent(tag)}
    pageDesc={`所有带有 "${decodeURIComponent(tag)}" 标签的文章。`}
  >
    <ul>
      {page.data.map(data => <Card {...data} />)}
    </ul>
  </Main>

  <Pagination {page} />

  <Footer noMarginTop={page.lastPage > 1} />
</Layout>
